@model IEnumerable<ETickets.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<style>
.box{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(330px, 2fr));
        grid-gap: 1rem;
}

.box .cards .card-header {
        justify-content: space-between;
        align-items:center;
            background-color: var(--bs-success);
            color: #fff;
        }

.box .cards .card-header h2{
                font-size: 17px;
                font-weight: bold;
}

.box .cards .card-header a{
    color:#fff
}

.box .cards .card-body {
        justify-content: space-between;
        position: relative;
        overflow: hidden;
    }
.box .cards .card-body .img img{
width: 50%;
/* margin-left: -17px; */
position: absolute;
top: -16px;
overflow: hidden;
left: -16px;
}

.box .cards .card-body .details {
        width: 50%;
                font-size: 12px;
                font-weight: bold;
    }
    

    .details-cart {
        justify-content: space-between;
    }
</style>

<div class="container box">
    @foreach (var item in Model)
    {
        <div class="cards bg-light mb-3">
            <div class="card-header d-flex">
                <h2> @Html.DisplayFor(modelItem => item.Name)</h2>
                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
            </div>
            <div class="card-body d-flex">
                <div class="img">
                    <img class="rounded-top" src="@item.imgUrl" alt="@item.Name">
                </div>
                <div class="details">
                    <p> @Html.DisplayFor(modelItem => item.Description)</p>
                    <p> Cinema : @Html.DisplayFor(modelItem => item.CinemaID)</p>
                    <p> Category : @Html.DisplayFor(modelItem => item.movieCategory)</p>
                    <p> StartDate : @Html.DisplayFor(modelItem => item.StartDate)</p>
                    <p> EndDate : @Html.DisplayFor(modelItem => item.EndtDate)</p>
                </div>

            </div>
            <div class="details-cart d-flex">
                <div>
                    <i class="fa-solid fa-cart-shopping"></i>
                    <p> @Html.DisplayFor(modelItem => item.Price)</p>
                </div>
                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
            </div>
        </div>
    }
</div>